<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/artboard2"
        android:scaleType="center"
        />
    <RelativeLayout

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_color"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="Profile"
            android:textColor="@color/white"
            android:fontFamily="@font/hero_new_semi_bold"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/radius_8"
            android:backgroundTint="@color/text_color_subheading"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/hero_new_medium"
            android:textSize="13sp"
            android:text="Logout" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hero_new_semi_bold"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:text="Full Name"
        android:textSize="20sp"
        android:id="@+id/fullName"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hero_new_regular"
        android:layout_below="@+id/fullName"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color_subheading"
        android:text="support@ran.com.au"
        android:textSize="13sp"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RR"
    android:layout_marginTop="26dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_below="@+id/email"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Badges"
        android:textSize="18sp"
        android:fontFamily="@font/hero_new_semi_bold"
        android:textColor="@color/main_color"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/info"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/radius_8"
        android:backgroundTint="#607AED"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/hero_new_medium"
        android:textSize="13sp"
        android:text="Info" />
</RelativeLayout>


    <LinearLayout
        android:layout_above="@+id/deleteAccount"
        android:layout_below="@+id/RR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        >
        <LinearLayout
            android:id="@+id/bronze"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/bronze"
                />
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BRONZE"
                    android:fontFamily="@font/hero_new_semi_bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"

                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/silver"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/silver"
                />
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SILVER"
                    android:fontFamily="@font/hero_new_semi_bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/gold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/gold"
                />
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOLD"
                    android:fontFamily="@font/hero_new_semi_bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/platinum"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/platinum"
                />
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLATINUM"
                    android:fontFamily="@font/hero_new_semi_bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/noBadgesEarnedYet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/hero_new_medium"
        android:text="No badges earned yet"
        android:textColor="@color/text_color_subheading"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_8"
        android:backgroundTint="#66ffffff"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/deleteAccount"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/baseline_delete_outline_24"
            />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:fontFamily="@font/hero_new_medium"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            />

    </LinearLayout>
</RelativeLayout>
